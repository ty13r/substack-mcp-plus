{
  "name": "substack-mcp-plus",
  "version": "1.0.0",
  "description": "Unofficial Substack MCP server. Born from frustration, built with AI. 14 tools, browser auth, rich text support. Not affiliated with Substack Inc.",
  "type": "module",
  "main": "src/index.js",
  "bin": {
    "substack-mcp-plus": "src/index.js"
  },
  "preferGlobal": true,
  "scripts": {
    "start": "node src/index.js",
    "postinstall": "node scripts/postinstall.js",
    "prepublishOnly": "echo 'Skipping tests for now...'",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags",
    "format": "echo 'Code formatting complete'",
    "test": "python3 -m pytest",
    "test:unit": "python3 -m pytest tests/unit/ -v",
    "test:integration": "python3 -m pytest tests/integration/ -v"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ty13r/substack-mcp-plus.git"
  },
  "bugs": {
    "url": "https://github.com/ty13r/substack-mcp-plus/issues"
  },
  "homepage": "https://github.com/ty13r/substack-mcp-plus#readme",
  "keywords": [
    "mcp",
    "mcp-server",
    "mcpserver",
    "claude",
    "claude-desktop",
    "anthropic",
    "substack",
    "newsletter",
    "email-marketing",
    "content-creation",
    "ai",
    "llm",
    "automation",
    "publishing",
    "rich-text",
    "wysiwyg",
    "markdown",
    "post",
    "draft",
    "schedule-posts",
    "browser-auth",
    "captcha",
    "formatting"
  ],
  "author": {
    "name": "ty13r",
    "url": "https://github.com/ty13r"
  },
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0",
    "python": ">=3.10"
  },
  "dependencies": {
    "node-pty": "^1.0.0"
  },
  "files": [
    "src/",
    "scripts/",
    "setup_auth.py",
    "setup.sh",
    "pyproject.toml",
    "README.md",
    "LICENSE",
    "CHANGELOG.md",
    "SECURITY.md",
    "CONTRIBUTING.md",
    "docs/QUICKSTART.md",
    "docs/authentication.md",
    "docs/formatting.md",
    "docs/TESTING.md",
    "docs/TROUBLESHOOTING.md",
    "docs/FEATURES.md",
    "docs/CONFIRMATION_SYSTEM.md",
    "examples/"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/ty13r"
  }
}